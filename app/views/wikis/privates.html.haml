.row
  .col-md-10
    %h1 Wikis Privadas
  .col-md-2
    .wiki-buttons
      - if policy(Wiki.new).create?
        = link_to "New wiki", new_wiki_path, class: 'btn btn-default'
%br
- if @wikis.count > 0
  %table{class: "table table-hover"}
    - @wikis.each do |f|
      %tr
        %td= link_to f.title, f
        %td topic
        %td user
        %td history
  %br
- else
  %p You don't have any private wikis :(