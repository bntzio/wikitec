<div class='row mt'>
  <div class='col-sm-12'>
    <h2><%= "Diff between Version #{@version.id} and Current Version" %></h2>
    <style><%= Diffy::CSS %></style>
    <div class='well diff'>
      <p>
        <strong>Title:</strong>
        <%= diff(@version.reify.title, @wiki.title) %>
      </p>
      <p>
        <strong>Body:</strong>
        <%= diff(@version.reify.body, @wiki.body) %>
      </p>
      <p>
        <strong>Tags:</strong>
        <%= diff(@version.reify.tag_list, @wiki.tag_list) %>
      </p>
    </div>
    <p>
    <%= "Version authored by #{find_version_author_name(@version)} on #{@version.created_at} by '#{@version.event.humanize}'." %>
    </p>
  </div>
</div>
<div class='fr'>
  <%= link_to 'Back', edit_wiki_path(@wiki), class: 'btn btn-danger' %>
  <%= link_to 'Rollback', rollback_wiki_version_path(@wiki, @version), class: 'btn btn-primary', method: 'PATCH' %>
</div>